<h1>Friends</h1>

<div id="results">
  <div class="row">
    <div class="col-9">
      <table class="table table-dark table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Portfolio</th>
            <th scope="col">Add</th> 
            <th scope="col">Remove</th>
          </tr>
        </thead>
        <tbody>
        <% @tracked_friends.each do |friend| %>
          <tr>
            <th scope="row"><%= friend.full_name %></th>
            <td><%= friend.email %></td>
            <td><%= link_to "Portfolio", friend_portfolio_path, class:"btn btn-warning" %></td>
            
            <td> <%= link_to %>
            
            <td><%= link_to 'Remove', friend_portfolio_path(friend), method: :delete, data: {confirm: 'Are you Sure?'},
            class: 'btn btn-xs btn-warning'  %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
